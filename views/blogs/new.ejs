<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Travel Blog to <%= park.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/parks/<%= park._id %>/blogs" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[title]" placeholder="title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[source]" placeholder="source link">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[description]" placeholder="Enter a brief description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/parks">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>