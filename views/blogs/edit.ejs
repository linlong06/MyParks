<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center"> Edit Blog</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/parks/<%= park_id %>/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[source]" value="<%= blog.source %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[description]" value="<%= blog.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/parks">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>