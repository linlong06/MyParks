<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add A New Park</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/parks" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="website" placeholder="Offical Website">
                </div>
                <div class="form-group">
                    <input class="form-control" style="height: 200px" type="text" name="description" placeholder="Share a few words...">
                </div>                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/parks">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>